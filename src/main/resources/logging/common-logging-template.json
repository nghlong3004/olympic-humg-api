{
  "@timestamp" : {
    "$resolver": "timestamp",
    "pattern": {
      "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
      "timeZone": "UTC",
      "locale": "en_US"
    }
  },
  "tags": ["${spring:spring.profiles.active}"],
  "trace.id": {"$resolver": "mdc", "key": "trace_id"},
  "span.id": {"$resolver": "mdc", "key": "span_id"},
  "trace.dd_id": {"$resolver": "mdc", "key": "dd.trace_id"},
  "span.dd_id": {"$resolver": "mdc", "key": "dd.span_id"},
  "log": {
    "level": {
      "$resolver": "level",
      "field": "name"
    },
    "logger": {
      "$resolver": "logger",
      "field": "name"
    },
    "origin": {
      "file": {
        "name": {
          "$resolver": "source",
          "field": "fileName"
        },
        "line": {
          "$resolver": "source",
          "field": "lineNumber"
        }
      },
      "function": {
        "$resolver": "source",
        "field": "methodName"
      }
    }
  },
  "process": {
    "thread": {
      "id": {"$resolver": "thread", "field": "id"},
      "name": {"$resolver": "thread", "field": "name"}
    }
  },
  "message": { "$resolver": "message" }
}