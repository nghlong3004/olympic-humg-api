{
  "@timestamp" : {
    "$resolver": "timestamp",
    "pattern": {
      "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
      "timeZone": "UTC",
      "locale": "en_US"
    }
  },
  "log": {
    "level": {
      "$resolver": "level",
      "field": "name"
    }
  },
  "trace.id": {"$resolver": "mdc", "key": "trace_id"},
  "span.id": {"$resolver": "mdc", "key": "span_id"},
  "trace.dd_id": {"$resolver": "mdc", "key": "dd.trace_id"},
  "span.dd_id": {"$resolver": "mdc", "key": "dd.span_id"},
  "message": {"$resolver": "message", "stringified": false},
  "tags": ["${spring:spring.profiles.active}"],
  "http": {
    "request": {
      "id": {"$resolver": "mdc", "key": "http.request.id"},
      "method": {"$resolver": "mdc", "key": "http.request.method"},
      "mime_type": {"$resolver": "mdc", "key": "http.request.mime_type"},
      "bytes": {"$resolver": "mdc", "key": "http.request.bytes"},
      "referrer": {"$resolver": "mdc", "key": "http.request.referrer"},
      "body": {
        "content": {"$resolver": "mdc", "key": "http.request.body.content"},
        "bytes": {"$resolver": "mdc", "key": "http.request.body.bytes"}
      }
    },
    "response": {
      "status_code":  {"$resolver": "mdc", "key": "http.response.status_code"},
      "mime_type":  {"$resolver": "mdc", "key": "http.response.mime_type"},
      "bytes": {"$resolver": "mdc", "key": "http.response.bytes"},
      "body": {
        "content": {"$resolver": "mdc", "key": "http.response.body.content"},
        "bytes": {"$resolver": "mdc", "key": "http.response.body.bytes"}
      }
    }
  },
  "url": {
    "path": {"$resolver": "mdc", "key": "url.path"},
    "query": {"$resolver": "mdc", "key": "url.query"},
    "domain": {"$resolver": "mdc", "key": "url.domain"},
    "port": {"$resolver": "mdc", "key": "url.port"},
    "scheme": {"$resolver": "mdc", "key": "url.scheme"}
  },
  "client": {
    "ip": {"$resolver": "mdc", "key": "client.ip"},
    "address": {"$resolver": "mdc", "key": "client.address"},
    "domain": {"$resolver": "mdc", "key": "client.domain"},
    "user": {
      "id": {"$resolver": "mdc", "key": "client.user.id"},
      "email": {"$resolver": "mdc", "key": "client.user.email"},
      "signin_id": {"$resolver": "mdc", "key": "client.user.signin_id"},
      "scope": {"$resolver": "mdc", "key": "client.user.scope"},
      "access_level": {"$resolver": "mdc", "key": "client.user.access_level"},
      "sa": {
        "client_id": {"$resolver": "mdc", "key": "client.user.sa.client_id"}
      },
      "organization": {
        "id": {"$resolver": "mdc", "key": "client.user.organization.id"}
      }
    },
    "device": {
      "identifier": {"$resolver": "mdc", "key": "client.device.identifier"},
      "os": {
        "full": {"$resolver": "mdc", "key": "client.device.os.full"},
        "version": {"$resolver": "mdc", "key": "client.device.os.version"}
      },
      "sa": {
        "client_id": {"$resolver": "mdc", "key": "client.device.sa.client_id"},
        "version": {"$resolver": "mdc", "key": "client.device.sa.version"}
      },
      "package": {
        "name": {"$resolver": "mdc", "key": "client.device.package.name"},
        "version": {"$resolver": "mdc", "key": "client.device.package.version"}
      }
    },
    "geo": {
      "country_iso_code": {"$resolver": "mdc", "key": "client.geo.country.iso_code"},
      "location": {
        "lon": {"$resolver": "mdc", "key": "client.geo.location.longitude"},
        "lat": {"$resolver": "mdc", "key": "client.geo.location.latitude"}
      },
      "timezone": {"$resolver": "mdc", "key": "client.geo.timezone"}
    }
  },
  "user_agent": {
    "original": {"$resolver": "mdc", "key": "user_agent.original"}
  },
  "event": {
    "duration": {"$resolver": "mdc", "key": "response.elapsed_time"}
  }
}
